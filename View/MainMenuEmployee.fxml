<?xml version="1.0" encoding="UTF-8"?>
<!--Defines the version of XML-->
<!--Imports all of the UI attributes being used-->
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<!--Creates the elements and then given them their attributes - with TitledPane it links the controller class specific to the main menu employee using fx:controller-->
<TitledPane alignment="CENTER" animated="false" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" text="Main Menu" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.MainMenuEmployeeController">
  <content>
    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" style="-fx-background-color: RGB(21,93,175);">
         <children>
             <!--The add stock button has an onAction attribute which links to a method so when the button is pressed that method will run.-->
             <Button fx:id="addStock" layoutX="261.0" layoutY="74.0" mnemonicParsing="false" onAction="#addStock" style="-fx-background-color: rgb(0,52,127);" text="Add Stock" textFill="WHITE">
               <font>
                   <!--Defines the font of the text in this attribute-->
                   <Font name="Verdana" size="12.0" />
               </font></Button>
             <!--The search product button has an onAction attribute which links to a method so when the button is pressed that method will run.-->
             <Button fx:id="searchProduct" layoutX="245.0" layoutY="126.0" mnemonicParsing="false" onAction="#searchProduct" style="-fx-background-color: rgb(0,52,127);" text="Search Product" textFill="#eeeeee">
               <font>
                   <!--Defines the font of the text in this attribute-->
                   <Font name="Verdana" size="12.0" />
               </font></Button>
             <!--The display transactions button has an onAction attribute which links to a method so when the button is pressed that method will run.-->
             <Button fx:id="displayTransactionLogs" layoutX="227.0" layoutY="175.0" mnemonicParsing="false" onAction="#displayTransactions" style="-fx-background-color: rgb(0,52,127);" text="Display Transaction Logs" textFill="WHITE">
               <font>
                   <!--Defines the font of the text in this attribute-->
                   <Font name="Verdana" size="12.0" />
               </font></Button>
             <!--The exit button has an onAction attribute which links to a method so when the button is pressed that method will run.-->
             <Button fx:id="exit" layoutX="282.0" layoutY="233.0" mnemonicParsing="false" onAction="#exit" style="-fx-background-color: rgb(0,52,127);" text="Exit" textFill="WHITE">
               <font>
                   <!--Defines the font of the text in this attribute-->
                   <Font name="Verdana" size="12.0" />
               </font></Button>
             <!--The purchase button has an onAction attribute which links to a method so when the button is pressed that method will run.-->
             <Button fx:id="purchaseButton" layoutX="463.0" layoutY="175.0" mnemonicParsing="false" onAction="#purchaseProduct" text="Purchase Product" textFill="WHITE" style="-fx-background-color: rgb(0,52,127);">
               <font>
                   <!--Defines the font of the text in this attribute-->
                   <Font name="Verdana" size="12.0" />
               </font>
            </Button>
         </children></AnchorPane>
  </content>
   <font>
       <!--Defines the font of the text-->
       <Font name="Verdana" size="12.0" />
   </font>
</TitledPane>
