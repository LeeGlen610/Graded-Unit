<?xml version="1.0" encoding="UTF-8"?>
<!--Defines the version of XML-->
<!--Imports all of the UI attributes being used-->
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<!--Creates the elements and then given them their attributes - with TitledPane it links the controller class specific to the main menu admin using fx:controller-->
<TitledPane alignment="CENTER" animated="false" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" text="Main Menu" textAlignment="CENTER" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.MainMenuAdminController">
  <content>
    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" style="-fx-background-color: RGB(21,93,175);">
         <children>
            <!--The stock button has an onAction attribute which links to a method so when the button is pressed that method will run.-->
            <Button fx:id="stockButton" layoutX="264.0" layoutY="43.0" mnemonicParsing="false" onMouseClicked="#addStock" style="-fx-background-color: rgb(0,52,127);" text="Add Stock" textFill="WHITE">
               <font>
                  <!--Defines the font of the text in this attribute-->
                  <Font name="Verdana" size="12.0" />
               </font></Button>
            <!--The search button has an onAction attribute which links to a method so when the button is pressed that method will run.-->
            <Button fx:id="searchButton" layoutX="251.0" layoutY="104.0" mnemonicParsing="false" onAction="#searchProduct" style="-fx-background-color: rgb(0,52,127);" text="Search Product" textFill="WHITE">
               <font>
                  <!--Defines the font of the text in this attribute-->
                  <Font name="Verdana" size="12.0" />
               </font></Button>
            <!--The display ECS button has an onAction attribute which links to a method so when the button is pressed that method will run.-->
            <Button fx:id="displayECSButton" layoutX="186.0" layoutY="162.0" mnemonicParsing="false" onAction="#displayECSDetails" style="-fx-background-color: rgb(0,52,127);" text="Display Employee, Customer &amp; Supplier" textFill="WHITE">
               <font>
                  <!--Defines the font of the text in this attribute-->
                  <Font name="Verdana" size="12.0" />
               </font></Button>
            <!--The display transaction logs button has an onAction attribute which links to a method so when the button is pressed that method will run.-->
            <Button fx:id="displayTLButton" layoutX="226.0" layoutY="221.0" mnemonicParsing="false" onAction="#displayTransactions" style="-fx-background-color: rgb(0,52,127);" text="Display Transaction Logs" textFill="WHITE">
               <font>
                  <!--Defines the font of the text in this attribute-->
                  <Font name="Verdana" size="12.0" />
               </font></Button>
            <!--The generate reports button has an onAction attribute which links to a method so when the button is pressed that method will run.-->
            <Button fx:id="generateReportsButton" layoutX="245.0" layoutY="283.0" mnemonicParsing="false" onAction="#generateReport" style="-fx-background-color: rgb(0,52,127);" text="Generate Reports" textFill="WHITE">
               <font>
                  <!--Defines the font of the text in this attribute-->
                  <Font name="Verdana" size="12.0" />
               </font></Button>
            <!--The exit button has an onAction attribute which links to a method so when the button is pressed that method will run.-->
            <Button fx:id="exit" alignment="CENTER" layoutX="282.0" layoutY="329.0" mnemonicParsing="false" onAction="#exit" style="-fx-background-color: rgb(0,52,127);" text="Exit" textFill="WHITE">
               <font>
                  <!--Defines the font of the text in this attribute-->
                  <Font name="Verdana" size="12.0" />
               </font></Button>
            <!--The purchase button has an onAction attribute which links to a method so when the button is pressed that method will run.-->
            <Button fx:id="purchaseButton" layoutX="460.0" layoutY="221.0" mnemonicParsing="false" onAction="#productPurchased" style="-fx-background-color: rgb(0,52,127);" text="Purchase Product" textFill="WHITE">
               <font>
                  <!--Defines the font of the text in this attribute-->
                  <Font name="Verdana" size="12.0" />
               </font></Button>
         </children></AnchorPane>
  </content>
   <font>
      <!--Defines the font of the text-->
      <Font name="Verdana" size="12.0" />
   </font>
</TitledPane>
